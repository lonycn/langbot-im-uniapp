.uni-im-msg-reader {
  display: flex;
  width: 100%;
  flex: 1;
  margin-top: 5px;
  overflow: hidden;
}
.uni-im-msg-reader .read-state {
  font-size: 12px;
  flex-direction: row;
  color: #555;
  width: 65px;
  height: 16px;
}
.uni-im-msg-reader .active-color {
  color: #aaa;
}
.uni-im-msg-reader .active-color.isGroupMsg {
  color: #0b65ff;
}
.uni-im-msg-reader.self {
  align-items: flex-end;
}
.uni-im-msg-reader.self .read-state {
  text-align: right;
}
.uni-im-msg-reader-popup {
  height: 100%;
}
.uni-im-msg-reader-popup .reader-list-box {
  width: 750rpx;
  height: 100%;
}
.uni-im-msg-reader-popup .reader-list-box .segmented-control {
  flex-shrink: 0;
}
.uni-im-msg-reader-popup .reader-list-box > .title {
  display: none;
}
.uni-im-msg-reader-popup .reader-list-box .content {
  height: 100%;
  overflow: hidden;
}
.uni-im-msg-reader-popup .reader-list-box .content .reader-list {
  flex-direction: column;
  overflow: hidden;
}
.uni-im-msg-reader-popup .reader-list-box .content .reader-list .title {
  padding: 15px;
  background-color: #FFF;
  font-size: 20px;
}
.uni-im-msg-reader-popup .reader-list-box .content .reader-list .user-list {
  flex: 1;
  overflow: hidden;
}
.uni-im-msg-reader-popup .reader-list-box .content .reader-list .user-list .users {
  flex-direction: row;
  align-items: center;
  padding: 10px;
}
.uni-im-msg-reader-popup .reader-list-box .content .reader-list .user-list .users .nickname {
  font-size: 16px;
  color: #333;
  margin-left: 6px;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}