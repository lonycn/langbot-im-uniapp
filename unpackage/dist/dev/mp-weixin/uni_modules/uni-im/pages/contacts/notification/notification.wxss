#app,
page,
view,
label {
  display: flex;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
button {
  margin: 0;
}
page,
view,
label,
swiper-item {
  flex-direction: column;
}
page,
view,
image,
input,
swiper,
scroll-view,
swiper-item,
text,
textarea,
video {
  box-sizing: border-box;
}
swiper-item {
  position: absolute;
}
.notification-box {
  height: 100vh;
  background-color: #f5f5f5;
}
.notification-box .tips {
  height: 40px;
  line-height: 40px;
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #666;
}
.notification-box .handle-box {
  flex-direction: row;
  height: 40px;
  align-items: center;
}
.notification-box .handle {
  width: 50px;
  text-align: center;
  height: 25px;
  line-height: 25px;
  background-color: #efefef;
  border-radius: 50px;
  font-size: 12px;
  margin: 0 5px;
}
.notification-box .done {
  width: 50px;
  background-color: #FFF;
  color: #aaa;
}
.notification-box .load-more {
  background-color: #f5f5f5 !important;
  justify-content: center;
}
.notification-box .tip {
  position: relative;
  left: -15px;
  width: 750rpx;
  /* pc宽屏时需要使用100vw */
  width: 100%;
}
.notification-box .load-more .uni-list-item {
  background-color: #f5f5f5 !important;
}