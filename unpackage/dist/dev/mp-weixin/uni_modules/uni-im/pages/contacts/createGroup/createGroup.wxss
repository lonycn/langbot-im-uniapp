#app,
page,
view,
label {
  display: flex;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
button {
  margin: 0;
}
page,
view,
label,
swiper-item {
  flex-direction: column;
}
page,
view,
image,
input,
swiper,
scroll-view,
swiper-item,
text,
textarea,
video {
  box-sizing: border-box;
}
swiper-item {
  position: absolute;
}
.create-group-box {
  position: relative;
  background-color: #F9F9F9;
  flex: 1;
}
.create-group-box .header-box {
  flex-direction: column;
  background-color: #F9F9F9;
}
.create-group-box .content-box {
  width: 100%;
  overflow: auto;
}
.create-group-box .label-box {
  flex-direction: row;
  align-items: center;
  background-color: #FFF;
  padding: 5px 0;
}
.create-group-box .checkbox {
  margin: 12px 10px 0 0;
  border: 1px solid #DDD;
  width: 20px;
  height: 20px;
  justify-content: center;
  align-items: center;
  border-radius: 100px;
}
.create-group-box .checkbox.disabled {
  background-color: #1189e9;
  opacity: 0.5;
  border: none;
  cursor: not-allowed;
}
.create-group-box .checkbox.checked {
  background-color: #1189e9;
  border: none;
}
.create-group-box .foot-box {
  position: fixed;
  bottom: 15px;
  width: 100%;
  height: 60px;
  justify-content: center;
  align-items: center;
}
.create-group-box .foot-box .btn {
  width: 300px;
}