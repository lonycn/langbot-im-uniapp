#app,
page,
view,
label {
  display: flex;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
button {
  margin: 0;
}
page,
view,
label,
swiper-item {
  flex-direction: column;
}
page,
view,
image,
input,
swiper,
scroll-view,
swiper-item,
text,
textarea,
video {
  box-sizing: border-box;
}
swiper-item {
  position: absolute;
}
.contacts-pages {
  height: 100%;
  background-color: #FFF;
  position: relative;
}
.contacts-pages .menu-list-box .uni-list-item {
  cursor: pointer;
}
.contacts-pages .menu-list-box .uni-list-item:hover {
  background-color: #FBFBFB !important;
}
.contacts-pages .title {
  padding: 8px;
  font-size: 14px;
}
.contacts-pages .user-list-box {
  flex: 1;
}
.contacts-pages .user-list-item {
  padding: 0;
}
.contacts-pages .user-list-item-scroll-view {
  width: 750rpx;
  background-color: #ffffff;
}
.contacts-pages .user-list-item-scroll-view-item {
  width: 880rpx;
  position: relative;
  height: 60px;
  align-items: center;
  padding: 8px 15px;
  flex-direction: row;
  border-bottom: 1px solid #f0f0f0;
}
.contacts-pages .avatar {
  background-color: #fefefe;
  width: 40px;
  height: 40px;
  border-radius: 5px;
}
.contacts-pages .username {
  line-height: 30px;
  margin-left: 30rpx;
  font-size: 16px;
}
.contacts-pages .delete-btn {
  border-radius: 0;
  position: absolute;
  right: 0;
  top: 0;
  height: 60px;
  line-height: 60px;
  width: 130rpx;
  font-size: 26rpx;
  padding: 0;
}
.contacts-pages .slot-icon-box {
  width: 45px;
  height: 45px;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.contacts-pages .slot-icon {
  width: 25px;
  height: 25px;
}
.contacts-pages .warn {
  background-color: #FA9E3B;
}
.contacts-pages .green {
  background-color: #08C060;
}
.contacts-pages .blue {
  background-color: #5DBAFF;
}