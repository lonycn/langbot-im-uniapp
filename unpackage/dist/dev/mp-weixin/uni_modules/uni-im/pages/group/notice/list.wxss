#app,
page,
view,
label {
  display: flex;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
button {
  margin: 0;
}
page,
view,
label,
swiper-item {
  flex-direction: column;
}
page,
view,
image,
input,
swiper,
scroll-view,
swiper-item,
text,
textarea,
video {
  box-sizing: border-box;
}
swiper-item {
  position: absolute;
}
page {
  background-color: #FAFAFA;
  flex: 1;
  height: 100%;
}
.group-notice-list {
  height: 100%;
  flex: 1;
}
.group-notice-list .group-notice-content {
  height: 0;
  flex: 1;
}
.group-notice-list .navigator {
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 50px;
  background-color: #f5f5f5;
}
.group-notice-list .navigator .title {
  font-size: 16px;
  text-align: center;
}
.group-notice-list .navigator .uni-icons {
  position: absolute;
  right: 10px;
}
.group-notice-list .notice-item {
  padding: 10px 0;
  background-color: #fff;
  margin-bottom: 10px;
}
.group-notice-list .notice-item .btns-box {
  flex-direction: row;
  margin-top: 10px;
  justify-content: flex-end;
}
.group-notice-list .notice-item .btns-box .btn {
  margin-right: 10px;
  font-size: 12px;
}
.group-notice-list .uni-fab__circle {
  position: absolute;
  bottom: 10px;
}
.group-notice-list .group-notice-edit {
  border-radius: 10px;
  width: 600px;
}