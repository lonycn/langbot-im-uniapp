#app,
page,
view,
label {
  display: flex;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
button {
  margin: 0;
}
page,
view,
label,
swiper-item {
  flex-direction: column;
}
page,
view,
image,
input,
swiper,
scroll-view,
swiper-item,
text,
textarea,
video {
  box-sizing: border-box;
}
swiper-item {
  position: absolute;
}
page {
  width: 100%;
  height: 100%;
  flex: 1;
  background-color: #2e2e3e;
}
page .uni-im-index {
  background-color: #ececec;
  flex: 1;
  height: 100%;
  overflow: hidden;
  flex-direction: row;
}
page .uni-im-index #center-view {
  position: relative;
  background-color: #FFF;
  width: 100%;
}
page .uni-im-index #center-view #search-bar-box {
  flex-direction: row;
  align-items: center;
  height: 50px;
  padding: 0 10px;
  background-color: #FCFCFC;
}
page .uni-im-index #center-view #search-bar-box #search-bar {
  flex: 1;
  padding: 0;
}
page .uni-im-index #center-view #search-bar-box #search-bar .uni-searchbar__box {
  height: 30px;
  justify-content: flex-start;
}
page .uni-im-index #center-view #search-bar-box #search-bar .uni-searchbar__box .uni-input-placeholder,
page .uni-im-index #center-view #search-bar-box #search-bar .uni-searchbar__box .uni-searchbar__text-placeholder {
  color: #CCC;
  font-size: 12px;
  padding-left: 0;
}
page .uni-im-index #center-view #search-bar-box #search-bar .uni-searchbar__box .uni-searchbar__box-icon-search {
  padding: 0 2px 0 8px;
  top: -1px;
}
page .uni-im-index #center-view #search-bar-box #search-bar .uni-searchbar__box .uni-searchbar__box-icon-search .uniui-search:before {
  font-size: 14px;
  color: #CCC;
}
page .uni-im-index #center-view #search-bar-box #search-bar .uni-searchbar__box .uniui-clear:before {
  font-size: 18px;
  color: #CCC;
}
page .uni-im-index #center-view #search-bar-box .add-icon {
  margin-left: 10px;
  width: 28px;
  height: 28px;
  display: flex;
  background-color: #f3f3f3;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
}
page .uni-im-index #center-view #conversation-list-box {
  height: 0;
  flex: 1;
}
page .uni-im-index #center-view #uni-im-contacts-box {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  width: 100%;
  height: 100%;
}
page .uni-im-index #center-view #uni-im-contacts-box .contacts-pages .user-list-box {
  overflow: auto;
}
page .uni-im-index #center-view #uni-im-contacts-box .contacts-pages .activeMenu {
  background-color: #f5f5f5 !important;
}
.windows #center-view #conversation-list-box .conversation-list-item .uni-list-chat__container {
  padding-right: 10px;
}
.isPWA uni-page-body {
  padding: 0;
}
.isPWA uni-page-body .uni-im-index {
  border-radius: 0;
}