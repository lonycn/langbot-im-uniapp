.share-msg-root {
  width: 750rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  flex: 1;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.3);
}
.share-msg-root .share-msg-content {
  background-color: #fff;
  width: 750rpx;
  height: 100%;
  position: relative;
}
.share-msg-root .share-msg-content .navbar {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}
.share-msg-root .share-msg-content .navbar .title {
  font-size: 14px;
  color: #333;
}
.share-msg-root .share-msg-content .navbar .btn {
  font-size: 12px;
  color: #FFF;
  background-color: #149d42;
  padding: 4px 8px;
  border-radius: 6px;
}
.share-msg-root .share-msg-content .navbar .btn.disabled {
  background-color: #EEE;
  color: #CCC;
}
.share-msg-root .share-msg-content .navbar .btn.cancel {
  border: none;
  background-color: #FFF;
  color: #666;
}
.share-msg-root .conversation-list-box {
  height: 100%;
  border-right: 1px solid #eee;
}
.share-msg-root .conversation-list-box .conversation-list .refresh-box {
  background-color: #fff;
}
.share-msg-root .conversation-detail-box {
  flex: 1;
}
.share-msg-root .conversation-detail-box .title {
  font-size: 18px;
  color: #333;
  margin: 15px;
}
.share-msg-root .selected-conversation-list {
  height: 0;
  flex: 1;
}
.share-msg-root .scroll-content {
  flex-direction: row;
  flex-wrap: wrap;
  margin: 0 5px 35px 5px;
}
.share-msg-root .selected-conversation-item {
  flex-direction: row;
  padding: 3px;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
  background-color: #fafafa;
  margin: 3px;
}
.share-msg-root .selected-conversation-item .avatar {
  width: 35px;
  height: 35px;
  border-radius: 50%;
}
.share-msg-root .selected-conversation-item .title {
  font-size: 12px;
  color: #333;
  text-align: center;
  margin: 0 5px;
}
.share-msg-root .close-icon {
  cursor: pointer;
}
.share-msg-root .input-box {
  padding: 15px 10px;
  border: 1px solid #EEE;
  border-width: 1px 0;
}
.share-msg-root .textarea {
  width: 100%;
  border-radius: 5px;
  font-size: 14px;
  outline: none;
}
.share-msg-root .action-btns {
  flex-direction: row;
  justify-content: flex-end;
  padding: 10px;
}
.share-msg-root .action-btns .btn {
  margin: 0 10px;
  width: 100px;
}
.share-msg-root .action-btns .btn.cancel {
  color: #999;
  border-color: #999;
}