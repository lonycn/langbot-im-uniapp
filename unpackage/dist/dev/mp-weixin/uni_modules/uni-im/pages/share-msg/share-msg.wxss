#app,
page,
view,
label {
  display: flex;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
button {
  margin: 0;
}
page,
view,
label,
swiper-item {
  flex-direction: column;
}
page,
view,
image,
input,
swiper,
