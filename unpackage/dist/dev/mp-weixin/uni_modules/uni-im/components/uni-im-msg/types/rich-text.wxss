.uni-im-rich-text {
  display: inline-block !important;
  background-color: #fff;
  padding: 5px 10px;
  border-radius: 10px;
  max-width: 100%;
}
.uni-im-rich-text.isFromSelf {
  background-color: #c9e7ff;
}
.uni-im-rich-text .text {
  word-break: break-all;
  cursor: text;
}
.uni-im-rich-text .app-link, .uni-im-rich-text .link {
  display: inline;
  -webkit-user-select: all;
          user-select: all;
  margin: 0 2px;
  word-break: break-all;
}
.uni-im-rich-text .app-link {
  color: #0080ff;
  text-decoration: underline;
}
.uni-im-rich-text .only1u {
  padding: 0;
}
.uni-im-rich-text .only1u .web-info {
  margin-top: 0;
}
.uni-im-rich-text .img {
  margin: 5px 0 !important;
}
.uni-im-rich-text .nickname {
  color: #0b65ff;
  padding: 1px 4px;
  font-size: 14px;
}
.uni-im-rich-text .isCallMe {
  color: #FFF;
  background-color: #0080ff;
  border-radius: 5px;
  margin-right: 4px;
}
.uni-im-rich-text .read-state {
  position: relative;
  top: -5px;
}
.uni-im-rich-text .isSingeImg {
  background-color: transparent !important;
  padding: 0;
}
.uni-im-rich-text .web-info {
  background-color: #FFF;
  padding: 10px;
  border-radius: 10px;
  margin-top: 10px;
  border: 1px solid #eee;
}
.uni-im-rich-text .web-info .title-box {
  flex-direction: row;
}
.uni-im-rich-text .web-info .title-box .web-icon {
  width: 16px;
  height: 16px;
  margin: 4px 5px 0 0;
}
.uni-im-rich-text .web-info .title {
  font-size: 16px;
  flex: 1;
  font-weight: bold;
}
.uni-im-rich-text .web-info .content {
  flex-direction: row;
}
.uni-im-rich-text .web-info .content .description {
  font-size: 14px;
  color: #666;
  margin-top: 5px;
  flex: 1;
  beak-word: break-all;
}
.uni-im-rich-text .web-info .content .web-thumbnail {
  height: 100px;
  width: 100px;
  margin: 5px;
}
.uni-im-rich-text .web-info .link-box {
  flex-direction: row;
  border-top: 1px solid #eee;
  padding-top: 5px;
  justify-content: space-between;
  align-items: flex-end;
}
.uni-im-rich-text .web-info .link-box .link {
  font-size: 12px;
  white-space: nowrap;
  flex: 1;
  overflow: hidden;
}
.uni-im-rich-text .web-info .link-box .copy {
  opacity: 0.5;
  margin-left: 20px;
}
.uni-im-rich-text .web-info .link-box .copy:hover {
  opacity: 0.8;
}