.info-card {
  position: relative;
  padding: 10px 12px;
  flex-direction: row;
}
.info-card::after {
  content: "";
  position: absolute;
  left: 50px;
  right: 0;
  bottom: 0;
  height: 1px;
  transform: scaleY(0.1);
  background-color: #eee;
}
.info-card .avatar-box {
  position: relative;
  width: 40px;
  height: 40px;
  border-radius: 5px;
  overflow: hidden;
}
.info-card .avatar-box .avatar {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}
.info-card .main {
  flex-grow: 1;
  justify-content: space-around;
  overflow: hidden;
  margin-left: 5px;
  flex-shrink: 1;
}
.info-card .main .row {
  flex-direction: row;
  align-items: center;
}
.info-card .main .row .title {
  font-size: 14px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.info-card .main .row .tag-box {
  transform: scale(0.8);
  margin-right: 5px;
}
.info-card .main .row .tag-box .tag {
  word-break: keep-all;
  font-size: 12px;
  color: #1a6dfe;
  border: 1px solid #1a6dfe;
  border-radius: 2px;
  padding: 0 2px;
}
.info-card .main .row .time {
  white-space: nowrap;
  font-size: 10px;
  color: #999;
  margin-left: auto;
}
.info-card .main .row .state {
  margin-left: auto;
  flex-direction: row;
  align-items: center;
}
.info-card .main .row .state .red-point {
  width: 8px;
  height: 8px;
  background-color: #f00;
  border-radius: 50%;
  margin-left: 2px;
}
.info-card .main .row .state .star, .info-card .main .row .state .mute {
  width: 12px;
  height: 12px;
  opacity: 0.5;
}
.info-card .main .row .state .badge {
  transform: scale(0.9);
  font-size: 12px;
  color: #fff;
  background-color: #f00;
  border-radius: 10px;
  min-width: 16px;
  min-height: 16px;
  padding: 0 5px;
  justify-content: center;
  align-items: center;
  margin: 0 2px;
  align-self: flex-end;
}
.info-card .main .row .note-box {
  flex-direction: row;
  overflow: hidden;
  align-items: center;
  flex-shrink: 1;
}
.info-card .main .row .note-box .red-note {
  font-size: 12px;
  white-space: nowrap;
  color: #f00;
  margin-right: 3px;
}
.info-card .main .row .note-box .note {
  font-size: 14px;
  color: #aaa;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.info-card .pinned {
  position: absolute;
  right: 3px;
  top: 3px;
  width: 8px;
  height: 8px;
}