.member-list-box .content {
  position: fixed;
  width: 750rpx;
  height: 80vh;
  bottom: 0;
  z-index: 999;
  background-color: #ffffff;
  border-radius: 15px 15px 0 0;
  box-shadow: 0 0 100px rgba(0, 0, 0, 0.2);
}
.member-list-box .content .head {
  flex-direction: row;
  position: relative;
}
.member-list-box .content .head .close {
  position: absolute;
  left: 5px;
  background-color: #eee;
  height: 18px;
  width: 18px;
  margin: 12px;
  transform: rotate(270deg);
  border-radius: 50%;
  justify-content: center;
  align-items: center;
}
.member-list-box .content .head .title {
  flex: 1;
  text-align: center;
  margin-top: 10px;
  font-size: 14px;
  color: #000;
}
.member-list-box .content .search .uni-searchbar__box {
  margin: 0;
  height: 30px;
}
.member-list-box .content .search .uni-searchbar__box .uni-searchbar__box-icon-search {
  padding: 0 5px;
}
.member-list-box .content .member-list {
  height: 0;
  flex-grow: 1;
  padding: 10px;
}
.member-list-box .content .member-list .member-list-item {
  overflow: hidden;
  height: 40px;
  width: 100%;
  font-size: 14px;
  line-height: 40px;
  padding: 0 15px;
  border-radius: 10px;
  margin-bottom: 10px;
  text-align: left;
  flex-direction: row;
}
.member-list-box .content .member-list .member-list-item .real_name {
  margin-left: 10px;
  font-size: 12px;
  color: #666;
}
.member-list-box .content .member-list .member-list-item-active {
  background-color: #efefef;
}
.member-list-box .content .member-list .null-about-menber-tip {
  color: #666;
  font-size: 12px;
  align-items: center;
  justify-content: center;
  height: 100px;
}
.member-list-box .member-list-mark {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  flex: 1;
  width: 100vw;
  height: 100vh;
  z-index: 999;
}