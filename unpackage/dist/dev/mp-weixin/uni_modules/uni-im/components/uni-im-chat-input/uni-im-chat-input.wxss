.uni-im-chat-input {
  padding: 0 5px;
  border-top: 1px solid #f5f5f5;
}
.uni-im-chat-input .top-menu, .uni-im-chat-input .send-msg-btn-box {
  display: none;
}
.uni-im-chat-input .main {
  flex: 1;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  overflow: hidden;
}
.uni-im-chat-input .main .icon {
  margin: 0 5px;
  margin-bottom: 20px;
  width: 30px;
  height: 30px;
  align-content: center;
  flex-shrink: 0;
}
.uni-im-chat-input .main .icon.confirm {
  width: auto;
  color: #fff;
  font-size: 0.75rem;
  border-radius: 6px;
  background-color: #2faf4c;
  height: 28px;
  line-height: 28px;
  padding: 0 8px;
  text-align: center;
}
.uni-im-chat-input .main .camera-filled-box {
  background-color: #3b81fd;
  justify-content: center;
  width: 26px;
  height: 26px;
  border-radius: 100px;
}
.uni-im-chat-input .main .editor-box-parent {
  flex: 1;
  height: 100%;
  overflow: hidden;
}
.uni-im-chat-input .main .editor-box-parent .editor-box {
  position: relative;
  overflow: hidden;
  flex: 1;
  margin: 10px 5px;
  padding: 10px 8px;
  background-color: #FFF;
  min-height: 46px;
}
.uni-im-chat-input .main .editor-box-parent .editor-box, .uni-im-chat-input .main .editor-box-parent .editor-box .editor {
  border-radius: 10px;
}
.uni-im-chat-input .main .editor-box-parent .editor-box .uni-im-sound {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 10;
}
.uni-im-chat-input .media-box .menu {
  flex-direction: row;
  justify-content: self-start;
  align-items: self-start;
  padding: 10px 0;
}
.uni-im-chat-input .media-box .menu .menu-item {
  margin: 15px;
  width: 60px;
  height: 60px;
  justify-content: center;
  align-items: center;
}
.uni-im-chat-input .media-box .menu .menu-item .menu-item-icon {
  width: 40px;
  height: 40px;
  justify-content: center;
  align-items: center;
  background-color: #FFF;
  padding: 8px;
  border-radius: 10px;
  margin-bottom: 5px;
}
.uni-im-chat-input .media-box .menu .menu-item .menu-item-text {
  font-size: 12px;
  color: #666666;
}
.uni-im-chat-input .media-box .emoji-list-box {
  height: 100%;
  padding: 15rpx;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.uni-im-chat-input .media-box .emoji-list-box .item {
  text-align: center;
  font-size: 65rpx;
  width: 87rpx;
  height: 87rpx;
  justify-content: center;
  align-items: center;
  display: inline-block;
}