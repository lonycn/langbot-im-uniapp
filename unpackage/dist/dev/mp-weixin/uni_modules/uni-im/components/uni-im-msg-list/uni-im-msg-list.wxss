.uni-im-msg-list-root {
  position: relative;
}
.uni-im-msg-list-root.in-topic {
  border: 2px #bee1ff solid;
}
.uni-im-msg-list-root, .uni-im-msg-list-root .uni-im-list {
  background-color: transparent;
  height: 100%;
}
.uni-im-msg-list-root .uni-im-list-item {
  transform: scale(1, -1);
}
.uni-im-msg-list-root .uni-im-list-item .uni-im-msg {
  width: 0;
  flex-grow: 1;
  margin-bottom: 10px;
}
.uni-im-msg-list-root .uni-im-list-item .system .checkbox {
  display: none;
}
.uni-im-msg-list-root .data-state-tip-box {
  align-items: center;
  justify-content: center;
  flex-direction: row;
  color: #999999;
  margin-bottom: -5px;
  margin-top: 10px;
}
.uni-im-msg-list-root .data-state-tip-text {
  height: 36px;
  line-height: 36px;
  font-size: 12px;
  margin: 0 5px;
  color: #999999;
}
.uni-im-msg-list-root .msg-box {
  position: relative;
  transition-property: background-color;
  transition-duration: 2s;
  flex-direction: row;
}
.uni-im-msg-list-root .msg-box .checkbox {
  margin: 30px 0 0 10px;
}
.uni-im-msg-list-root .msg-box .mask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
}
.uni-im-msg-list-root .active-msg {
  background-color: #f9f9f9;
}
.uni-im-msg-list-root .showRemindMsg {
  background-color: #62caf8;
  border-radius: 50px;
  padding: 2px 15px;
  font-size: 12px;
  color: #FFF;
  position: fixed;
  right: 5px;
  top: 10px;
}
.uni-im-msg-list-root .group-notification-popup {
  z-index: 9999;
}
.uni-im-msg-list-root .new-msg-bar {
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  right: 40px;
  bottom: 10px;
  font-size: 12px;
  background-color: white;
  color: #007fff;
  padding: 5px 8px 5px 5px;
  border-radius: 15px 15px 15px 15px;
}