.uni-im-conversation-list {
  height: 0;
  flex: 1;
  overflow: hidden;
  height: 100%;
}
.uni-im-conversation-list .conversation-type {
  margin: 0 10px;
  flex-direction: row;
  overflow: scroll;
}
.uni-im-conversation-list .conversation-type::-webkit-scrollbar {
  width: 0;
  height: 0;
}
.uni-im-conversation-list .conversation-type .item {
  font-size: 16px;
  color: #333;
  text-align: center;
  padding: 5px 0;
  margin: 0 15px;
  cursor: pointer;
}
.uni-im-conversation-list .conversation-type .item.active {
  color: #1ab94e;
  border-bottom: 2px solid #1ab94e;
}
.uni-im-conversation-list .conversation-list {
  height: 0;
  flex: 1;
}
.uni-im-conversation-list .tip {
  flex: 1;
}
.uni-im-conversation-list .canCheck .note-box,
.uni-im-conversation-list .canCheck .time,
.uni-im-conversation-list .canCheck .state {
  display: none;
}
.uni-im-conversation-list .canCheck .title {
  font-size: 16px !important;
}
.uni-im-conversation-list .conversation-list .conversation-list-item {
  border-radius: 5px;
  overflow: hidden;
}
.uni-im-conversation-list .conversation-list .conversation-list-item.focus {
  border: 2px solid #1ab94e;
}
.uni-im-conversation-list .conversation-list .conversation-list-item.activeConversation {
  background-color: #f1f1f1;
}
.uni-im-conversation-list .check-box {
  border: 1px solid #ccc;
  width: 20px;
  height: 20px;
  border-radius: 2px;
  margin-right: 10px;
}
.uni-im-conversation-list .check-box.checked {
  background-color: #00a953;
  border-color: #00a953;
}
.uni-im-conversation-list .foot-box {
  padding: 0 15px;
  flex-direction: row;
  height: 40px;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.03);
  border-radius: 10px;
  margin: 10px;
  color: #555;
}
.uni-im-conversation-list .foot-box .right-icon {
  margin-left: auto;
}
.uni-im-conversation-list .foot-box .left-icon {
  margin-left: auto;
  margin-right: 5px;
}